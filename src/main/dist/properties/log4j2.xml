<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>
        <RollingFile name="fullAnnot" append="true" fileName="log/full_annot.log" filePattern="log/full_annot.log.%d{yyyy-MM-dd}">
            <PatternLayout pattern="%d %p [%c] - %m%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1"/>
            </Policies>
        </RollingFile>
        <RollingFile name="aspectFixes" append="true" fileName="log/aspect_fixes.log" filePattern="log/aspect_fixes.log.%d{yyyy-MM}">
            <PatternLayout pattern="[%d] - %m%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1"/>
            </Policies>
        </RollingFile>
        <RollingFile name="insertRefRgdId" append="true" fileName="log/insertRefRgdId.log" filePattern="log/insertRefRgdId.log.%d{yyyy-MM}">
            <PatternLayout pattern="[%d] - %m%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1"/>
            </Policies>
        </RollingFile>
        <RollingFile name="summary" append="true" fileName="log/summary.log" filePattern="log/summary.log.%d{yyyy-MM-dd}">
            <PatternLayout pattern="[%d{yyyy-MM-dd HH:mm:ss}] - %m%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1"/>
            </Policies>
        </RollingFile>
        <RollingFile name="spring" append="true" fileName="log/spring.log" filePattern="log/spring.log.%d{yyyy-MM}">
            <PatternLayout pattern="[%d] - %m%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1"/>
            </Policies>
        </RollingFile>
    </Appenders>

    <Loggers>
        <Root level="INFO">
            <AppenderRef ref="Console"/>
        </Root>
        <Logger name="fullAnnot" level="debug" additivity="false">
            <AppenderRef ref="fullAnnot"/>
            <AppenderRef ref="Console" level="info"/>
        </Logger>
        <Logger name="aspectFixes" level="debug" additivity="false">
            <AppenderRef ref="aspectFixes"/>
            <AppenderRef ref="Console" level="info"/>
        </Logger>
        <Logger name="insertRefRgdId" level="debug" additivity="false">
            <AppenderRef ref="insertRefRgdId"/>
            <AppenderRef ref="Console" level="info"/>
        </Logger>
        <Logger name="summary" level="debug" additivity="false">
            <AppenderRef ref="summary"/>
            <AppenderRef ref="Console" level="info"/>
        </Logger>
        <Logger name="org.springframework" level="info" additivity="false">
            <AppenderRef ref="spring"/>
            <AppenderRef ref="Console" level="warn"/>
        </Logger>
    </Loggers>
</Configuration>